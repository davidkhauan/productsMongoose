<h1>Produtos</h1>
<div class="products">
    {{#each products}}
    <div class="product">
        <img src="{{this.image}}" alt="{{this.name}}" />
        <h2>{{this.name}}</h2>
        <p>R${{this.price}},00</p>
        <p>{{this.description}}</p>
        <div class="actions">
            <a href="/products/{{this._id}}" class="btn">Detalhes</a>
            <a href="/products/edit/{{this._id}}" class="btn">Editar</a>
        </div>
    </div>
    {{/each}}
</div>